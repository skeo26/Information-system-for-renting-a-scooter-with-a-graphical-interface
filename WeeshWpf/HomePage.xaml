<UserControl x:Class="WeeshWpf.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeeshWpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Rectangle Fill="Black" Opacity="0.6" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="680" Height="150">
            <Rectangle.RadiusX>20</Rectangle.RadiusX>
            <Rectangle.RadiusY>20</Rectangle.RadiusY>
        </Rectangle>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock  FontSize="25" Foreground="#FFF7D085" Margin="10" TextAlignment="Center" Text="Добро пожаловать в информационную систему Weesh.&#x0a;Мы предоставляем услуги по прокату самокатов.&#x0a;Благодарим за то, что выбираете нас.&#x0a;С любовью Weesh ">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="4" Color="Black" />
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
